					"savingTime":720,
					"getData":"{\"calories\":sum([zone[\"caloriesOut\"] for zone in jsonData[\"activities-heart\"][0][\"value\"][\"heartRateZones\"]])}",
					"saveCondition":"",
					"erroHandling":""
				},
				"Activity":{
					"type":"HealthStatus",
