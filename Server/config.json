					"erroHandling":""
				}
			}
		},
		"Foobot":{
			"header":"{\"Accept\":\"application/json;charset=UTF-8\",\"X-API-KEY-TOKEN\":\"VARIABLE_TOKEN\"}",
			"metrics":{
				"Foobot":{
					"type":"Environment",
